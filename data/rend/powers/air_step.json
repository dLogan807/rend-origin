{
  "name": "Air Step",
  "description": "Harness mana to bound through the air.",
  "type": "origins:multiple",
  "number_of_jumps": {
    "type": "origins:resource",
    "min": 0,
    "max": 7,
    "start_value": 7,
    "hud_render": {
      "should_render": true,
      "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_03.png",
      "bar_index": 23,
      "condition": {
        "type": "origins:and",
        "conditions": [
          {
            "type": "origins:xp_levels",
            "comparison": ">=",
            "compare_to": 20
          },
          {
            "type": "origins:resource",
            "resource": "*:*_number_of_jumps",
            "comparison": "<",
            "compare_to": 7
          }
        ]
      }
    }
  },
  "jump_reset": {
    "type": "origins:action_over_time",
    "interval": 50,
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:change_resource",
          "resource": "*:*_number_of_jumps",
          "change": 1,
          "operation": "add"
        },
        {
          "type": "origins:change_resource",
          "resource": "*:*_first_jump",
          "change": 1,
          "operation": "set"
        }
      ]
    },
    "condition": {
      "type": "origins:on_block"
    }
  },
  "first_jump": {
    "type": "origins:resource",
    "min": 0,
    "max": 1,
    "start_value": 1
  },
  "activating_jump": {
    "type": "origins:active_self",
    "key": "key.jump",
    "condition": {
      "type": "origins:all_of",
      "conditions": [
        {
          "type": "origins:on_block",
          "inverted": true
        },
        {
          "type": "origins:resource",
          "resource": "*:*_number_of_jumps",
          "comparison": ">",
          "compare_to": 0
        },
        {
          "type": "origins:resource",
          "resource": "*:mana_capacity",
          "comparison": ">=",
          "compare_to": 1
        },
        {
          "type": "origins:fluid_height",
          "fluid": "minecraft:water",
          "comparison": "==",
          "compare_to": 0
        },
        {
          "type": "origins:fluid_height",
          "fluid": "minecraft:lava",
          "comparison": "==",
          "compare_to": 0
        },
        {
          "type": "origins:xp_levels",
          "comparison": ">=",
          "compare_to": 20
        },
        {
          "type": "origins:dimension",
          "dimension": "minecraft:the_nether",
          "inverted": true
        }
      ]
    },
    "entity_action": {
      "type": "origins:if_else",
      "condition": {
        "type": "origins:resource",
        "resource": "*:*_first_jump",
        "comparison": "==",
        "compare_to": 1
      },
      "if_action": {
        "type": "origins:change_resource",
        "resource": "*:*_first_jump",
        "change": 0,
        "operation": "set"
      },
      "else_action": {
        "type": "origins:and",
        "actions": [
          {
            "type": "origins:play_sound",
            "sound": "minecraft:entity.rabbit.jump",
            "pitch": 0
          },
          {
            "type": "origins:change_resource",
            "resource": "*:*_number_of_jumps",
            "change": -1,
            "operation": "add"
          },
          {
            "type": "origins:execute_command",
            "command": "execute at @s run particle minecraft:cloud ~ ~1 ~ .01 .01 .01 0.1 5 force"
          },
          {
            "type": "origins:add_velocity",
            "set": true,
            "client": false,
            "server": true,
            "y": 0.5
          },
          {
            "type": "origins:if_else",
            "condition": {
              "type": "origins:moving",
              "vertically": false
            },
            "if_action": {
              "type": "origins:add_velocity",
              "space": "local",
              "z": 0.4
            }
          },
          {
            "type": "origins:change_resource",
            "resource": "*:mana_capacity",
            "change": -1
          }
        ]
      }
    }
  },
  "fall_half_immunity": {
    "type": "origins:invulnerability",
    "damage_condition": {
      "type": "origins:name",
      "name": "fall"
    },
    "condition": {
      "type": "origins:all_of",
      "conditions": [
        {
          "type": "origins:fall_distance",
          "comparison": "<",
          "compare_to": 7
        },
        {
          "type": "origins:resource",
          "resource": "*:*_number_of_jumps",
          "comparison": "==",
          "compare_to": 0
        }
      ]
    }
  },
  "fall_half_damage": {
    "type": "origins:modify_damage_taken",
    "damage_condition": {
      "type": "origins:in_tag",
      "tag": "minecraft:is_fall"
    },
    "condition": {
      "type": "origins:all_of",
      "conditions": [
        {
          "type": "origins:fall_distance",
          "comparison": ">",
          "compare_to": 5
        },
        {
          "type": "origins:resource",
          "resource": "*:*_number_of_jumps",
          "comparison": "==",
          "compare_to": 0
        }
      ]
    },
    "modifier": {
      "id": "rend:jump_resist",
      "operation": "multiply_total_multiplicative",
      "amount": -0.5
    }
  },
  "badges": [
    {
      "type": "origins:tooltip",
      "sprite": "origins:textures/gui/badge/active.png",
      "text": ["Use with [", { "keybind": "key.jump" }, "] while in the air."]
    },
    {
      "type": "origins:tooltip",
      "sprite": "rend:textures/gui/badge/cursed_prison.png",
      "text": "Unusable in the Nether."
    }
  ]
}
