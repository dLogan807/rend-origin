{
  "type": "origins:multiple",
  "name": "Distortion",
  "description": "Utilising the fluctuations in your soul through mana, you can apparate behind foes.",
  "sneak_tap_counter": {
    "type": "origins:resource",
    "min": 0,
    "max": 2
  },
  "sneak_tap_cooldown": {
    "type": "origins:cooldown",
    "cooldown": 5,
    "condition": {
      "type": "origins:resource",
      "resource": "*:*_sneak_tap_cooldown",
      "comparison": "==",
      "compare_to": 0
    }
  },
  "reset_sneak_tap_counter": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_sneak_tap_counter",
      "change": -1
    },
    "condition": {
      "type": "origins:resource",
      "resource": "*:*_sneak_tap_cooldown",
      "comparison": "==",
      "compare_to": 0
    },
    "interval": 15
  },
  "tp_behind": {
    "type": "origins:active_self",
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:change_resource",
          "resource": "*:*_sneak_tap_counter",
          "change": 1
        },
        {
          "type": "origins:if_else",
          "condition": {
            "type": "origins:resource",
            "resource": "*:*_sneak_tap_cooldown",
            "comparison": "==",
            "compare_to": 0
          },
          "if_action": {
            "type": "origins:trigger_cooldown",
            "power": "*:*_sneak_tap_cooldown"
          }
        },
        {
          "type": "origins:if_else",
          "condition": {
            "type": "origins:resource",
            "resource": "*:*_sneak_tap_counter",
            "comparison": "==",
            "compare_to": 2
          },
          "if_action": {
            "type": "origins:and",
            "actions": [
              {
                "type": "origins:raycast",
                "block": false,
                "distance": 5,
                "bientity_action": {
                  "type": "origins:and",
                  "actions": [
                    {
                      "type": "origins:actor_action",
                      "action": {
                        "type": "origins:change_resource",
                        "resource": "*:*_sneak_tap_counter",
                        "operation": "set",
                        "change": 0
                      }
                    },
                    {
                      "type": "origins:if_else",
                      "condition": {
                        "type": "origins:target_condition",
                        "condition": {
                          "type": "origins:raycast",
                          "entity": false,
                          "distance": 5,
                          "space": "local",
                          "direction": {
                            "y": -0.9,
                            "z": -1
                          }
                        }
                      },
                      "if_action": {
                        "type": "origins:if_else",
                        "condition": {
                          "type": "origins:actor_condition",
                          "condition": {
                            "type": "origins:resource",
                            "resource": "rend:mana_capacity",
                            "comparison": ">=",
                            "compare_to": 10
                          }
                        },
                        "if_action": {
                          "type": "origins:and",
                          "actions": [
                            {
                              "type": "origins:actor_action",
                              "action": {
                                "type": "origins:and",
                                "actions": [
                                  {
                                    "type": "origins:apply_effect",
                                    "effect": {
                                      "id": "minecraft:invisibility",
                                      "show_particles": false,
                                      "duration": 20
                                    }
                                  },
                                  {
                                    "type": "origins:change_resource",
                                    "resource": "*:mana_capacity",
                                    "change": -10
                                  },
                                  {
                                    "type": "origins:execute_command",
                                    "command": "execute store result storage minecraft:rend team.counter int 1 run scoreboard players get @s rend_team"
                                  },
                                  {
                                    "type": "origins:execute_command",
                                    "command": "particle minecraft:white_smoke ~ ~ ~ .3 1 .3 0 20 normal"
                                  },
                                  {
                                    "type": "origins:play_sound",
                                    "sound": "minecraft:block.candle.extinguish",
                                    "pitch": 2,
                                    "category": "players"
                                  }
                                ]
                              }
                            },
                            {
                              "type": "origins:target_action",
                              "action": {
                                "type": "origins:and",
                                "actions": [
                                  {
                                    "type": "origins:if_else_list",
                                    "actions": [
                                      {
                                        "condition": {
                                          "type": "origins:power_active",
                                          "power": "*:temp_disable_ai"
                                        },
                                        "action": {
                                          "type": "origins:change_resource",
                                          "resource": "*:temp_disable_ai_duration",
                                          "operation": "set",
                                          "change": 0
                                        }
                                      },
                                      {
                                        "condition": {
                                          "type": "origins:and",
                                          "conditions": [
                                            {
                                              "type": "origins:entity_type",
                                              "entity_type": "minecraft:player",
                                              "inverted": true
                                            },
                                            {
                                              "type": "origins:living"
                                            }
                                          ]
                                        },
                                        "action": {
                                          "type": "origins:grant_power",
                                          "power": "*:temp_disable_ai",
                                          "source": "*:distortion_tp_behind"
                                        }
                                      }
                                    ]
                                  },
                                  {
                                    "type": "origins:raycast",
                                    "entity": false,
                                    "distance": 5,
                                    "space": "local",
                                    "direction": {
                                      "y": -0.9,
                                      "z": -1
                                    },
                                    "command_at_hit": "execute positioned ~ ~-1 ~ run function rend:tp_behind_target with storage rend team"
                                  }
                                ]
                              }
                            },
                            {
                              "type": "origins:actor_action",
                              "action": {
                                "type": "origins:and",
                                "actions": [
                                  {
                                    "type": "origins:execute_command",
                                    "command": "particle minecraft:white_smoke ~ ~ ~ .3 1 .3 0 20 normal"
                                  },
                                  {
                                    "type": "origins:play_sound",
                                    "sound": "minecraft:block.candle.extinguish",
                                    "pitch": 2,
                                    "category": "players"
                                  }
                                ]
                              }
                            }
                          ]
                        },
                        "else_action": {
                          "type": "origins:actor_action",
                          "action": {
                            "type": "origins:execute_command",
                            "command": "title @s actionbar {\"text\":\"Insufficient mana\",\"color\":\"red\"}"
                          }
                        }
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      ]
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:resource",
          "resource": "*:piercing_strike_cooldown",
          "comparison": "==",
          "compare_to": 0
        },
        {
          "type": "origins:xp_levels",
          "comparison": ">=",
          "compare_to": 20
        },
        {
          "type": "origins:dimension",
          "dimension": "minecraft:the_nether",
          "inverted": true
        }
      ]
    },
    "key": "key.sneak"
  },
  "badges": [
    {
      "type": "origins:tooltip",
      "sprite": "origins:textures/gui/badge/active.png",
      "text": [
        "§8§oNow more skilled at controlling your fluctuations, you can influence them at will with mana.",
        "\n\n§7Double tap [",
        { "keybind": "key.sneak" },
        "§7] when §efacing§7 an entity to teleport behind them.",
        "\n§7Cannot be used while §oPiercing Strike§7 is on cooldown.",
        "\n\n§7XP Level: §320⟡",
        "\n§7Mana Cost: §b-10%"
      ]
    },
    {
      "type": "origins:tooltip",
      "sprite": "*:textures/gui/community/leopardx/badge/cursed_prison.png",
      "text": [
        "§4§lCursed Prison ⛓          ",
        "\n\n§7Unusable in the §4Nether§7.       "
      ]
    }
  ]
}
