{
  "type": "origins:multiple",
  "name": "Cursed Imprisonment",
  "description": "Born of the Overworld but shackled to the ruins of the Nether. The dimension curbs all beneficial abilites.",
  "nether_spawn": {
    "type": "origins:modify_player_spawn",
    "dimension": "minecraft:the_nether",
    "dimension_distance_multiplier": 0.125,
    "biome": "minecraft:nether_wastes",
    "spawn_strategy": "center"
  },
  "nether_prison": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:execute_command",
          "command": "title @s actionbar {\"text\":\"You are not yet worthy...\",\"color\":\"white\",\"italic\":true}"
        },
        {
          "type": "origins:damage",
          "amount": 3,
          "damage_type": "rend:cursed_prison"
        }
      ]
    },
    "interval": 20,
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:dimension",
          "dimension": "minecraft:the_nether",
          "inverted": false
        },
        {
          "type": "origins:xp_levels",
          "comparison": "<",
          "compare_to": 20
        },
        {
          "type": "origins:block_in_radius",
          "block_condition": {
            "type": "origins:block",
            "block": "minecraft:nether_portal"
          },
          "radius": 5,
          "shape": "star"
        }
      ]
    }
  },
  "portal_destroy": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:explode",
          "power": 1,
          "damage_self": false
        },
        {
          "type": "origins:damage",
          "damage_type": "rend:cursed_prison_explode",
          "amount": 10
        }
      ]
    },
    "interval": 10,
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:dimension",
          "dimension": "minecraft:the_nether"
        },
        {
          "type": "origins:xp_levels",
          "comparison": "<",
          "compare_to": 20
        },
        {
          "type": "origins:block_in_radius",
          "block_condition": {
            "type": "origins:block",
            "block": "minecraft:nether_portal"
          },
          "radius": 1
        }
      ]
    }
  },
  "minders": {
    "type": "origins:action_on_block_break",
    "block_condition": {
      "type": "origins:block",
      "block": "minecraft:nether_quartz_ore"
    },
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:execute_command",
          "command": "data modify storage minecraft:rend uuid_store.UUID set from entity @s UUID"
        },
        {
          "type": "origins:area_of_effect",
          "shape": "sphere",
          "radius": 15,
          "bientity_condition": {
            "type": "origins:target_condition",
            "condition": {
              "type": "origins:entity_type",
              "entity_type": "minecraft:zombified_piglin"
            }
          },
          "bientity_action": {
            "type": "origins:target_action",
            "action": {
              "type": "origins:and",
              "actions": [
                {
                  "type": "origins:execute_command",
                  "command": "function rend:set_angry_at with storage rend uuid_store"
                },
                {
                  "type": "origins:play_sound",
                  "sound": "minecraft:entity.zombified_piglin.angry"
                }
              ]
            }
          }
        }
      ]
    }
  },
  "badges": [
    {
      "type": "origins:tooltip",
      "sprite": "rend:textures/gui/badge/xp_orb.png",
      "text": "20 XP levels needed to escape."
    },
    {
      "type": "origins:tooltip",
      "sprite": "rend:textures/gui/badge/zombified_piglin.png",
      "text": "Zombified Piglin are wary of you growing stronger to escape, becoming hostile when mining Nether Quartz Ore."
    }
  ]
}
