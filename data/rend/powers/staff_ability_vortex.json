{
  "type": "origins:multiple",
  "hidden": true,
  "activation": {
    "type": "origins:active_self",
    "entity_action": {
      "type": "origins:raycast",
      "distance": 70,
      "entity": true,
      "shape_type": "collider",
      "fluid_handling": "source_only",
      "hit_action": [
        {
          "type": "origins:change_resource",
          "resource": "*:soul_staff_cooldown",
          "change": 9000,
          "operation": "set"
        },
        {
          "type": "origins:change_resource",
          "resource": "*:mana_capacity",
          "change": -15,
          "operation": "add"
        },
        {
          "type": "origins:change_resource",
          "resource": "*:*_timer",
          "change": 150,
          "operation": "set"
        }
      ],
      "command_at_hit": "function rend:vortex/vortex",
      "command_along_ray": "particle minecraft:cloud",
      "command_step": 1,
      "command_along_ray_only_on_hit": false
    },
    "cooldown": 1000,
    "hud_render": {
      "should_render": true,
      "sprite_location": "*:textures/gui/community/leopardx/resource_bar_01.png",
      "bar_index": 0,
      "condition": {
        "type": "origins:and",
        "conditions": [
          {
            "type": "origins:xp_levels",
            "comparison": ">=",
            "compare_to": 20
          },
          {
            "type": "origins:dimension",
            "dimension": "minecraft:the_nether",
            "inverted": true
          }
        ]
      }
    },
    "key": "key.use",
    "condition": {
      "type": "origins:all_of",
      "conditions": [
        {
          "type": "origins:equipped_item",
          "equipment_slot": "mainhand",
          "item_condition": {
            "type": "origins:custom_data",
            "nbt": "{soul_staff: 1b}"
          }
        },
        {
          "type": "origins:xp_levels",
          "comparison": ">=",
          "compare_to": 20
        },
        {
          "type": "origins:dimension",
          "dimension": "minecraft:the_nether",
          "inverted": true
        },
        {
          "type": "origins:resource",
          "resource": "*:soul_staff_cooldown",
          "comparison": "==",
          "compare_to": 0
        },
        {
          "type": "origins:resource",
          "resource": "*:soul_staff_selected_ability",
          "comparison": "==",
          "compare_to": 3
        },
        {
          "type": "origins:resource",
          "resource": "*:mana_capacity",
          "comparison": ">=",
          "compare_to": 15
        }
      ]
    }
  },
  "insufficient_mana": {
    "type": "origins:active_self",
    "entity_action": {
      "type": "origins:execute_command",
      "command": "title @s actionbar {\"text\":\"Insufficient mana!\",\"color\":\"red\"}"
    },
    "condition": {
      "type": "origins:all_of",
      "conditions": [
        {
          "type": "origins:equipped_item",
          "equipment_slot": "mainhand",
          "item_condition": {
            "type": "origins:custom_data",
            "nbt": "{soul_staff: 1b}"
          }
        },
        {
          "type": "origins:dimension",
          "dimension": "minecraft:the_nether",
          "inverted": true
