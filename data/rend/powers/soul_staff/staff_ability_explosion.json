{
  "type": "origins:multiple",
  "name": "Explosion",
  "description": "Initiate a cataclysmic explosion. Not to be underestimated.",
  "tome": {
    "type": "origins:replace_loot_table",
    "replace": {
      "minecraft:chests/nether_bridge": "rend:chests/explosion_tome/normal"
    }
  },
  "root": {
    "type": "origins:entity_set"
  },
  "cooldown": {
    "type": "origins:cooldown",
    "cooldown": 9600,
    "hud_render": {
      "should_render": true,
      "sprite_location": "*:textures/gui/community/leopardx/resource_bar_01.png",
      "bar_index": 8,
      "order": 4,
      "condition": {
        "type": "origins:and",
        "conditions": [
          {
            "type": "origins:xp_levels",
            "comparison": ">=",
            "compare_to": 20
          },
          {
            "type": "origins:dimension",
            "dimension": "minecraft:the_nether",
            "inverted": true
          }
        ]
      }
    }
  },
  "activation": {
    "type": "origins:active_self",
    "entity_action": {
      "type": "origins:raycast",
      "distance": 70,
      "entity": false,
      "shape_type": "collider",
      "fluid_handling": "source_only",
      "hit_action": {
        "type": "origins:and",
        "actions": [
          {
            "type": "origins:trigger_cooldown",
            "power": "*:*_cooldown"
          },
          {
            "type": "origins:trigger_cooldown",
            "power": "*:soul_staff/soul_staff_cooldown"
          },
          {
            "type": "origins:swing_hand",
            "hand": "MAIN_HAND"
          },
          {
            "type": "origins:change_resource",
            "resource": "*:mana_capacity",
            "change": -100
          },
          {
            "type": "origins:change_resource",
            "resource": "*:*_eye_contact_bar",
            "change": 100,
            "operation": "set"
          },
          {
            "type": "origins:execute_command",
            "command": "scoreboard players operation #rend.explosion_caster rend_team = @s rend_team"
          }
        ]
      },
      "block_action": {
        "type": "origins:delay",
        "ticks": 1,
        "action": {
          "type": "origins:offset",
          "y": 3,
          "action": {
            "type": "origins:spawn_entity",
            "entity_type": "minecraft:armor_stand",
            "tag": "{NoGravity:1b,Invisible:1b,Invulnerable:1b,Tags:[rend_explosion_root]}",
            "entity_action": {
              "type": "origins:and",
              "actions": [
                {
                  "type": "origins:grant_power",
                  "power": "*:soul_staff/explosion/root",
                  "source": "*:soul_staff/staff_ability_explosion_activation"
                },
                {
                  "type": "origins:selector_action",
                  "selector": "@a",
                  "bientity_action": {
                    "type": "origins:and",
                    "actions": [
                      {
                        "type": "origins:invert",
                        "action": {
                          "type": "add_to_entity_set",
                          "set": "*:soul_staff/staff_ability_explosion_root"
                        }
                      },
                      {
                        "type": "add_to_entity_set",
                        "set": "*:soul_staff/explosion/root_caster"
                      }
                    ]
                  },
                  "bientity_condition": {
                    "type": "origins:target_condition",
                    "condition": {
                      "type": "origins:command",
                      "command": "execute if score #rend.explosion_caster rend_team = @s rend_team",
                      "comparison": "==",
                      "compare_to": 1
                    }
                  }
                }
              ]
            }
          }
        }
      },
      "command_along_ray": "particle minecraft:flame",
      "command_step": 1,
      "command_along_ray_only_on_hit": false
    },
    "hud_render": {
      "should_render": false
    },
    "cooldown": 20,
    "key": "key.use",
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:resource",
          "resource": "*:*_cooldown",
          "comparison": "==",
          "compare_to": 0
        },
        {
          "type": "origins:entity_set_size",
          "set": "*:*_root",
          "comparison": "==",
          "compare_to": 0
        },
        {
          "type": "origins:equipped_item",
          "equipment_slot": "mainhand",
          "item_condition": {
            "type": "origins:custom_data",
            "nbt": "{soul_staff: 1b}"
          }
        },
        {
          "type": "origins:equipped_item",
          "equipment_slot": "offhand",
          "item_condition": {
            "type": "origins:custom_data",
            "nbt": "{explosion_tome: 1b}"
          }
        },
        {
          "type": "origins:xp_levels",
          "comparison": ">=",
          "compare_to": 55
        },
        {
          "type": "origins:dimension",
          "dimension": "minecraft:the_nether",
          "inverted": true
        },
        {
          "type": "origins:resource",
          "resource": "*:soul_staff/soul_staff_cooldown",
          "comparison": "==",
          "compare_to": 0
        },
        {
          "type": "origins:resource",
          "resource": "*:mana_capacity",
          "comparison": "==",
          "compare_to": 100
        }
      ]
    }
  },
  "eye_contact_bar": {
    "type": "origins:resource",
    "max": 100,
    "min": 0,
    "hud_render": {
      "should_render": true,
      "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png",
      "bar_index": 7,
      "order": 6,
      "condition": {
        "type": "origins:and",
        "conditions": [
          {
            "type": "origins:entity_set_size",
            "set": "*:*_root",
            "comparison": "==",
            "compare_to": 1
          },
          {
            "type": "origins:resource",
            "resource": "*:*_eye_contact_bar",
            "comparison": ">",
            "compare_to": 0
