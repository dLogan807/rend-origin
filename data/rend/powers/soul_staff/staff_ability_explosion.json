  "tome": {
    "type": "origins:replace_loot_table",
    "replace": {
      "minecraft:chests/nether_bridge": "rend:chests/explosion_tome"
    }
  },
  "activation": {
    "type": "origins:active_self",
    "entity_action": {
      "type": "origins:raycast",
      "distance": 70,
      "entity": true,
      "shape_type": "collider",
      "fluid_handling": "source_only",
      "hit_action": {
        "type": "origins:and",
        "actions": [
          {
            "type": "origins:swing_hand",
            "hand": "MAIN_HAND"
          },
          {
            "type": "origins:change_resource",
            "resource": "*:soul_staff/soul_staff_cooldown",
            "change": 9900,
            "operation": "set"
          },
          {
            "type": "origins:change_resource",
            "resource": "*:mana_capacity",
            "change": -20
          }
        ]
      },
      "block_action": {
        "type": "origins:offset",
        "action": {
          "type": "origins:spawn_entity",
          "entity_type": "minecraft:armor_stand",
          "tag": "{NoGravity:1b}",
          "entity_action": {
            "type": "origins:grant_power",
            "power": "*:soul_staff/explosion/raise_and_rotate",
            "source": "*:soul_staff/staff_ability_explosion_activation"
          }
        },
        "y": 3
      },
      "command_along_ray": "particle minecraft:cloud",
      "command_step": 1,
      "command_along_ray_only_on_hit": false
    },
    "cooldown": 100,
    "hud_render": {
      "should_render": true,
      "sprite_location": "*:textures/gui/community/leopardx/resource_bar_01.png",
      "bar_index": 0,
      "order": 1,
      "condition": {
        "type": "origins:and",
        "conditions": [
          {
            "type": "origins:xp_levels",
            "comparison": ">=",
            "compare_to": 20
          },
          {
            "type": "origins:dimension",
            "dimension": "minecraft:the_nether",
            "inverted": true
          }
        ]
      }
    },
    "key": "key.use",
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:equipped_item",
          "equipment_slot": "mainhand",
          "item_condition": {
            "type": "origins:custom_data",
            "nbt": "{soul_staff: 1b}"
          }
        },
        {
          "type": "origins:equipped_item",
          "equipment_slot": "offhand",
          "item_condition": {
            "type": "origins:custom_data",
            "nbt": "{explosion_tome: 1b}"
          }
