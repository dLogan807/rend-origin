{
  "type": "origins:multiple",
  "name": "Fallen Summoning",
  "description": "Tether past allies to the mortal plane.",
  "tome": {
    "type": "origins:replace_loot_table",
    "replace": {
      "minecraft:chests/jungle_temple": "rend:chests/fallen_summoning_tome"
    }
  },
  "skeleton_skull_drop": {
    "type": "origins:replace_loot_table",
    "replace": {
      "minecraft:entities/skeleton": "rend:entities/skeleton_drops_head"
    }
  },
  "tether_crafting": {
    "type": "origins:recipe",
    "recipe": {
      "id": "*:fallen_tether",
      "type": "minecraft:crafting_shaped",
      "pattern": ["#o#", "///", "/ /"],
      "key": {
        "o": {
          "item": "minecraft:skeleton_skull"
        },
        "/": {
          "item": "minecraft:bone"
        },
        "#": {
          "item": "minecraft:string"
        }
      },
      "result": {
        "id": "minecraft:armor_stand",
        "components": {
          "custom_model_data": 439203,
          "rarity": "uncommon",
          "custom_name": "[{\"text\":\"Fallen Tether Doll\",\"italic\":false}]",
          "lore": [
            "[{\"color\":\"red\",\"italic\":false,\"text\":\"Caution: \"},{\"color\":\"gray\",\"italic\":false,\"text\":\"This will return to an\"}]",
            "[{\"color\":\"gray\",\"italic\":false,\"text\":\"item a minute after placing.\"}]"
          ],
          "custom_data": { "fallen_tether": true },
          "entity_data": {
            "id": "minecraft:armor_stand",
            "Tags": ["fallen_tether"],
            "Invisible": true
          }
        }
      }
    }
  },
  "activation": {
    "type": "origins:active_self",
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:swing_hand",
          "hand": "MAIN_HAND"
        },
        {
          "type": "origins:execute_command",
          "command": "summon area_effect_cloud ~ ~ ~ {Particle:{type:\"entity_effect\"},Radius:5f,RadiusPerTick:-1f,Duration:30,potion_contents:{custom_color:3946304}}"
        },
        {
          "type": "origins:area_of_effect",
          "radius": 5,
          "shape": "sphere",
          "bientity_action": {
            "type": "origins:and",
            "actions": [
              {
                "type": "origins:invert",
                "action": {
                  "type": "origins:add_to_entity_set",
                  "set": "*:fallen/tether/hitbox_summoner"
                }
              },
              {
                "type": "origins:target_action",
                "action": {
                  "type": "origins:and",
                  "actions": [
                    {
                      "type": "origins:change_resource",
                      "resource": "*:fallen/tether/hitbox_do_animation",
                      "change": 1
                    }
                  ]
                }
              },
              {
                "type": "origins:actor_action",
                "action": {
                  "type": "origins:and",
                  "actions": [
                    {
                      "type": "origins:change_resource",
                      "resource": "*:mana_capacity",
                      "change": -15
                    }
                  ]
                }
              }
            ]
          },
          "bientity_condition": {
            "type": "origins:and",
            "conditions": [
              { "type": "origins:can_see" },
              {
                "type": "origins:actor_condition",
                "condition": {
                  "type": "origins:resource",
                  "resource": "*:mana_capacity",
                  "comparison": ">=",
                  "compare_to": 15
                }
              },
              {
                "type": "origins:target_condition",
                "condition": {
                  "type": "origins:and",
                  "conditions": [
                    {
                      "type": "origins:entity_type",
                      "entity_type": "minecraft:bee"
                    },
                    {
                      "type": "origins:nbt",
                      "nbt": "{Tags:['fallen_tether_hitbox']}"
                    }
                  ]
                }
              }
            ]
          }
        },
        {
          "type": "origins:change_resource",
          "resource": "*:soul_staff/soul_staff_cooldown",
          "change": 9200,
          "operation": "set"
        }
      ]
    },
    "cooldown": 800,
    "hud_render": {
      "should_render": true,
      "sprite_location": "*:textures/gui/community/leopardx/resource_bar_01.png",
      "bar_index": 0,
      "order": 1,
      "condition": {
        "type": "origins:and",
        "conditions": [
          {
            "type": "origins:xp_levels",
            "comparison": ">=",
            "compare_to": 20
          },
          {
            "type": "origins:dimension",
            "dimension": "minecraft:the_nether",
            "inverted": true
          }
        ]
      }
    },
    "key": "key.use",
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:equipped_item",
          "equipment_slot": "mainhand",
          "item_condition": {
            "type": "origins:custom_data",
            "nbt": "{soul_staff: 1b}"
          }
        },
        {
          "type": "origins:equipped_item",
          "equipment_slot": "offhand",
          "item_condition": {
            "type": "origins:custom_data",
