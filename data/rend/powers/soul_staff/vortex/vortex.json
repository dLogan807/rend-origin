{
  "type": "origins:multiple",
  "outer_circle": {
    "type": "origins:entity_set"
  },
  "spawn_outer_circle": {
    "type": "action_on_callback",
    "entity_action_gained": {
      "type": "origins:spawn_entity",
      "entity_type": "minecraft:armor_stand",
      "tag": "{Tags:[\"rend_vortex_outer\"],Invulnerable:1b,NoGravity:1b,Invisible:1b}",
      "bientity_action": {
        "type": "origins:and",
        "actions": [
          {
            "type": "origins:add_to_entity_set",
            "set": "*:soul_staff/vortex/vortex_outer_circle"
          },
          {
            "type": "origins:target_action",
            "action": {
              "type": "origins:grant_power",
              "power": "*:soul_staff/vortex/outer_circle",
              "source": "*:vortex_spawn_outer_circle"
            }
          }
        ]
      }
    }
  },
  "do_vortex": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:spawn_particles",
          "particle": {
            "type": "minecraft:dust",
            "params": { "color": [1, 1, 1], "scale": 2 }
          },
          "count": 3,
          "speed": 0.02,
          "spread": {
            "x": 6.0,
            "y": 2.0,
            "z": 6.0
          }
        },
        {
          "type": "origins:execute_command",
          "command": "execute positioned ~ ~-4 ~ run function rend:vortex/inner_circle"
        },
        {
          "type": "origins:execute_command",
          "command": "tp @s ~ ~ ~ ~-.9 ~"
        },
        {
          "type": "origins:play_sound",
          "sound": "minecraft:block.chorus_flower.grow",
          "category": "hostile",
          "pitch": 0,
          "volume": 2
        },
        {
          "type": "origins:area_of_effect",
          "radius": 8,
          "shape": "cube",
          "bientity_action": {
            "type": "origins:if_else",
            "condition": {
              "type": "origins:target_condition",
              "condition": {
                "type": "origins:entity_type",
                "entity_type": "minecraft:player"
              }
            },
            "if_action": {
              "type": "origins:and",
              "actions": [
                {
                  "type": "origins:add_velocity",
                  "x": 0.03,
                  "z": -0.2
                },
                {
                  "type": "origins:target_action",
                  "action": {
                    "type": "origins:apply_effect",
                    "effect": {
                      "id": "minecraft:levitation",
                      "duration": 20,
                      "amplifier": 1,
                      "show_particles": false,
                      "show_icon": false
                    }
                  }
                }
              ]
            },
            "else_action": {
              "type": "origins:add_velocity",
              "x": 0.1,
              "y": 0.15,
              "z": -0.35
            }
          },
          "bientity_condition": {
            "type": "origins:target_condition",
            "condition": {
              "type": "origins:in_tag",
              "tag": "*:inanimate",
              "inverted": true
            }
          }
        },
        {
          "type": "origins:change_resource",
          "resource": "*:*_timer",
          "change": -1
        }
      ]
    },
    "interval": 1,
    "condition": {
      "type": "origins:resource",
      "resource": "*:*_timer",
      "comparison": ">",
      "compare_to": 0
    }
  },
  "timer": {
    "type": "origins:resource",
    "min": 0,
    "max": 300,
    "start_value": 300,
    "min_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:area_of_effect",
          "radius": 2,
          "bientity_action": {
            "type": "origins:target_action",
            "action": {
              "type": "origins:execute_command",
              "command": "kill @s"
            }
          },
          "bientity_condition": {
            "type": "origins:in_entity_set",
            "set": "*:soul_staff/vortex/vortex_outer_circle"
          }
        },
        {
          "type": "origins:execute_command",
          "command": "kill @s"
        }
      ]
    }
  }
}
