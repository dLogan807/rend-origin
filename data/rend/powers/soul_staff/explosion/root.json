{
  "type": "origins:multiple",
  "child": {
    "type": "origins:entity_set"
  },
  "caster": {
    "type": "origins:entity_set"
  },
  "explode_timer": {
    "type": "origins:cooldown",
    "cooldown": 500
  },
  "start": {
    "type": "origins:action_on_callback",
    "entity_action_gained": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:trigger_cooldown",
          "power": "*:*_explode_timer"
        },
        {
          "type": "origins:spawn_entity",
          "entity_type": "minecraft:armor_stand",
          "tag": "{NoGravity:1b,Invisible:1b,Invulnerable:1b,Tags:[rend_explosion]}",
          "entity_action": {
            "type": "origins:and",
            "actions": [
              {
                "type": "origins:grant_power",
                "power": "*:soul_staff/explosion/circle",
                "source": "*:soul_staff/staff_ability_explosion_activation"
              }
            ]
          },
          "bientity_action": {
            "type": "origins:add_to_entity_set",
            "set": "*:*_child"
          }
        },
        {
          "type": "origins:execute_command",
          "command": "tp @s ~ ~15 ~"
        }
      ]
    }
  },
  "draw_in": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:area_of_effect",
      "shape": "sphere",
      "radius": 30,
      "bientity_action": {
        "type": "origins:add_velocity",
        "z": -0.01
      },
      "bientity_condition": {
        "type": "origins:target_condition",
        "condition": {
          "type": "origins:in_tag",
          "tag": "rend:inanimate",
          "inverted": true
        }
      }
    },
    "interval": 1
  },
  "duration_sound_effects": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:play_sound",
          "sound": "minecraft:block.campfire.crackle",
          "category": "hostile",
          "pitch": 2,
          "volume": 3
        },
        {
          "type": "origins:play_sound",
          "sound": "minecraft:block.blastfurnace.fire_crackle",
          "category": "hostile",
          "pitch": 0,
          "volume": 3
        },
        {
          "type": "origins:play_sound",
          "sound": "minecraft:ambient.nether_wastes.additions",
          "category": "hostile",
          "pitch": 0,
          "volume": 3
        }
      ]
    },
    "condition": {
      "type": "origins:resource",
      "resource": "*:*_explode_timer",
      "comparison": ">",
      "compare_to": 100
    }
  },
  "eye_contact_bar": {
    "type": "origins:resource",
    "max": 100,
    "min": 0,
    "start_value": 100,
    "min_action": {
      "type": "origins:change_resource",
      "resource": "*:*_only_destroy",
      "change": 1
    }
  },
  "detect_eye_contact": {
    "type": "origins:action_over_time",
    "interval": 10,
    "entity_action": {
      "type": "origins:action_on_entity_set",
      "set": "*:*_caster",
      "bientity_action": {
        "type": "origins:and",
        "actions": [
          {
            "type": "origins:target_action",
            "action": {
              "type": "origins:execute_command",
              "command": "execute store result storage minecraft:rend explosion.counter int 1 run scoreboard players get @s rend_team"
            }
          },
          {
            "type": "origins:actor_action",
            "action": {
              "type": "origins:execute_command",
              "command": "function rend:explosion/face_player with storage rend explosion"
            }
          },
          {
            "type": "origins:if_else",
            "condition": {
              "type": "origins:and",
              "conditions": [
                {
                  "type": "origins:can_see"
                },
                {
                  "type": "origins:relative_rotation",
                  "axes": ["x", "z"],
                  "actor_rotation": "body",
                  "target_rotation": "head",
                  "comparison": ">=",
                  "compare_to": -0.8,
                  "inverted": true
                }
              ]
            },
            "if_action": {
              "type": "origins:and",
              "actions": [
                {
                  "type": "origins:actor_action",
                  "action": {
                    "type": "origins:change_resource",
                    "resource": "*:*_eye_contact_bar",
                    "change": 2
                  }
                },
                {
                  "type": "origins:target_action",
                  "action": {
                    "type": "origins:change_resource",
                    "resource": "*:soul_staff/staff_ability_explosion_eye_contact_bar",
                    "change": 2
                  }
                }
              ]
            },
            "else_action": {
              "type": "origins:and",
              "actions": [
                {
                  "type": "origins:actor_action",
                  "action": {
                    "type": "origins:change_resource",
                    "resource": "*:*_eye_contact_bar",
                    "change": -20
                  }
                },
                {
                  "type": "origins:target_action",
                  "action": {
                    "type": "origins:change_resource",
                    "resource": "*:soul_staff/staff_ability_explosion_eye_contact_bar",
                    "change": -20
                  }
                }
              ]
            }
          }
        ]
      }
    }
  },
  "only_destroy": {
    "type": "origins:resource",
    "min": 0,
    "max": 1,
    "max_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:action_on_entity_set",
          "set": "*:*_child",
          "bientity_action": {
            "type": "target_action",
            "action": {
              "type": "origins:change_resource",
              "resource": "*:soul_staff/explosion/circle_destroy",
              "change": 1
            }
          }
        },
        {
          "type": "origins:execute_command",
          "command": "stopsound @s player"
        },
        {
          "type": "origins:play_sound",
          "sound": "minecraft:block.candle.extinguish",
          "category": "hostile",
          "volume": 3,
          "pitch": 0
        },
        {
          "type": "origins:play_sound",
          "sound": "minecraft:block.bell.resonate",
          "category": "hostile",
          "volume": 3,
          "pitch": 0
        },
        {
          "type": "origins:play_sound",
          "sound": "minecraft:block.beacon.power_select",
          "category": "hostile",
          "volume": 3,
          "pitch": 0
        },
        {
          "type": "origins:execute_command",
          "command": "kill @s"
        }
      ]
    }
  },
  "play_intitial_sound": {
    "type": "origins:resource",
    "min": 0,
    "max": 1,
    "max_action": {
      "type": "origins:play_sound",
      "sound": "minecraft:block.trial_spawner.ominous_activate",
      "category": "hostile",
      "pitch": 0,
      "volume": 3
    }
  },
  "explosion_effects": {
    "type": "origins:resource",
    "min": 0,
    "max": 1,
    "max_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:execute_command",
          "command": "particle minecraft:explosion_emitter ~ ~-5 ~ 2 2 2 0.5 5 force @a"
        },
        {
          "type": "origins:execute_command",
          "command": "particle minecraft:flame ~ ~-5 ~ 1 1 1 1 100 force @a"
        },
        {
          "type": "origins:execute_command",
          "command": "particle minecraft:explosion_emitter ~ ~ ~ 2 2 2 0.5 10 force @a"
        },
        {
          "type": "origins:execute_command",
          "command": "particle minecraft:flame ~ ~ ~ 1 1 1 1 1000 force @a"
        },
        {
          "type": "origins:execute_command",
          "command": "particle minecraft:explosion_emitter ~ ~5 ~ 2 2 2 0.5 5 force @a"
        },
        {
          "type": "origins:execute_command",
          "command": "particle minecraft:flame ~ ~5 ~ 1 1 1 1 100 force @a"
        },
        {
          "type": "origins:play_sound",
          "sound": "minecraft:entity.generic.explode",
          "category": "hostile",
          "pitch": 0.5,
          "volume": 4
        },
        {
          "type": "origins:delay",
          "ticks": 1,
          "action": {
            "type": "origins:play_sound",
            "sound": "minecraft:entity.generic.explode",
            "category": "hostile",
            "pitch": 0,
            "volume": 4
          }
        }
      ]
    }
  },
  "explosion_sequence": {
    "type": "origins:action_over_time",
    "interval": 5,
    "entity_action": {
      "type": "origins:if_else_list",
      "actions": [
        {
          "action": {
            "type": "origins:and",
            "actions": [
              {
                "type": "origins:change_resource",
                "resource": "*:*_explosion_effects",
                "change": 1
              },
              {
                "type": "origins:action_on_entity_set",
                "set": "*:*_child",
                "bientity_action": {
                  "type": "target_action",
                  "action": {
                    "type": "origins:and",
                    "actions": [
                      {
                        "type": "origins:change_resource",
                        "resource": "*:soul_staff/explosion/circle_explode",
                        "change": 1
                      },
                      {
                        "type": "origins:change_resource",
                        "resource": "*:soul_staff/explosion/circle_destroy",
                        "change": 1
                      }
                    ]
                  }
                }
              },
              {
                "type": "origins:action_on_entity_set",
                "set": "*:*_caster",
                "bientity_action": {
                  "type": "target_action",
                  "action": {
                    "type": "origins:change_resource",
                    "resource": "*:soul_staff/staff_ability_explosion_success",
                    "change": 1
                  }
                }
              },
              {
                "type": "origins:execute_command",
                "command": "kill @s"
              }
            ]
          },
          "condition": {
            "type": "origins:resource",
            "resource": "*:*_explode_timer",
            "comparison": "==",
            "compare_to": 0
          }
        },
        {
          "action": {
            "type": "origins:change_resource",
            "resource": "*:*_play_intitial_sound",
            "change": 1
          },
          "condition": {
            "type": "origins:resource",
            "resource": "*:*_explode_timer",
            "comparison": "<",
            "compare_to": 15
          }
        }
      ]
    }
  }
}
