{
  "name": "8th Sense",
  "description": "Creatures sense your dangerous potential and pursue you over greater distances.",
  "type": "origins:multiple",
  "modify_target_range": {
    "type": "origins:action_on_callback",
    "entity_action_chosen": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:execute_command",
          "command": "scale set pehkui:visibility 1.5 @s"
        },
        {
          "type": "origins:execute_command",
          "command": "scale persist set pehkui:visibility true @s"
        }
      ]
    }
  },
  "badges": [
    {
      "type": "origins:tooltip",
      "sprite": "origins:textures/gui/badge/info.png",
      "text": [
        "§8§oInstinctively wary of you, entities go to great lengths to be rid of you.",
        "\n\n§7Hostile entities §echase§7 you down over a §c50%§7 longer distance."
      ]
    }
  ]
}
