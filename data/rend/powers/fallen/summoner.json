{
  "type": "origins:multiple",
  "hidden": true,
  "summoned_fallen": {
    "type": "origins:entity_set",
    "action_on_add": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:actor_action",
          "action": {
            "type": "origins:if_else",
            "condition": {
              "type": "origins:and",
              "conditions": [
                {
                  "type": "origins:advancement",
                  "advancement": "*:fallen_army",
                  "inverted": true
                },
                {
                  "type": "origins:entity_set_size",
                  "set": "*:fallen/summoner_summoned_fallen",
                  "comparison": ">=",
                  "compare_to": 20
                }
              ]
            },
            "if_action": {
              "type": "origins:grant_advancement",
              "advancement": "*:fallen_army"
            }
          }
        },
        {
          "type": "origins:invert",
          "action": {
            "type": "add_to_entity_set",
            "set": "*:fallen/fallen_summoner"
          }
        }
      ]
    }
  },
  "restore_entity_set": {
    "type": "origins:action_on_callback",
    "entity_action_added": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:execute_command",
          "command": "scoreboard players operation #rend_summoner rend_team = @s rend_team"
        },
        {
          "type": "origins:area_of_effect",
          "radius": 32,
          "shape": "sphere",
          "bientity_action": {
            "type": "add_to_entity_set",
            "set": "*:fallen/summoner_summoned_fallen"
          },
          "bientity_condition": {
            "type": "origins:target_condition",
            "condition": {
              "type": "origins:and",
              "conditions": [
                {
                  "type": "origins:entity_type",
                  "entity_type": "minecraft:skeleton"
                },
                {
                  "type": "origins:command",
                  "command": "execute if score #rend_summoner rend_team = @s rend_team",
                  "comparison": "==",
                  "compare_to": 1
                }
              ]
            }
          }
        }
      ]
    }
  },
