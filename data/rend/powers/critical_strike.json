{
  "type": "origins:multiple",
  "name": "Critical Strike",
  "description": "Trained in the art of exploiting your foes' weaknesses.",
  "critical_strike": {
    "type": "origins:modify_damage_dealt",
    "self_action": {
      "type": "origins:trigger_cooldown",
      "power": "*:*_critical_cooldown"
    },
    "target_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:execute_command",
          "command": "particle minecraft:crit ~ ~1 ~ .1 .1 .1 0.20 10 normal @a"
        },
        {
          "type": "origins:play_sound",
          "sound": "minecraft:entity.player.attack.crit",
          "pitch": 2,
          "category": "players"
        }
      ]
    },
    "bientity_condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:relative_rotation",
          "axes": ["x", "z"],
          "actor_rotation": "head",
          "target_rotation": "body",
          "comparison": ">=",
          "compare_to": 0.8
        },
        { "type": "origins:distance", "comparison": "<=", "compare_to": 2 }
      ]
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:resource",
          "resource": "*:*_is_sneaking",
          "comparison": ">=",
          "compare_to": 1
        },
        {
          "type": "origins:resource",
          "resource": "*:*_critical_cooldown",
          "comparison": "==",
          "compare_to": 0
        },
        {
          "type": "origins:on_block"
        }
      ]
    },
    "modifier": {
      "id": "*:agile_physique_critical_strike",
      "amount": 1.5,
      "operation": "multiply_base_additive"
    }
  },
  "critical_cooldown": {
    "type": "origins:cooldown",
    "hud_render": {
      "should_render": true,
      "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png",
      "order": 2,
      "bar_index": 1
    },
    "cooldown": 150
  },
  "sneak_detection": {
    "type": "origins:active_self",
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_is_sneaking",
      "change": 1
    },
    "key": {
      "key": "key.sneak",
      "continuous": true
    }
  },
  "is_sneaking": {
    "type": "origins:resource",
    "min": 0,
    "max": 2
  },
  "reset_is_sneaking": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_is_sneaking",
      "change": -1
    },
    "interval": 3
  },
  "badges": [
    {
      "type": "origins:tooltip",
      "sprite": "origins:textures/gui/community/silent/badge/icons/sword.png",
      "text": [
        "When behind a target, hold [",
        { "keybind": "key.sneak" },
        "] and strike to deal significant damage. Must be grounded and within 2 blocks."
      ]
    }
  ]
}
