{
  "type": "origins:multiple",
  "name": "Faded Husk",
  "description": "Your withered soul blatantly displays your lack of strength, affecting your health and attack damage.",
  "set_scaled_modifiers": {
    "type": "origins:action_over_time",
    "interval": 40,
    "entity_action": {
      "type": "origins:execute_command",
      "command": "function rend:faded_husk/calc_and_set_modifiers"
    }
  },
  "toggle_invisibility": {
    "type": "origins:active_self",
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:if_else",
          "condition": {
            "type": "origins:and",
            "conditions": [
              {
                "type": "origins:resource",
                "resource": "*:*_invisibility_active",
                "comparison": "==",
                "compare_to": 0
              },
              {
                "type": "origins:resource",
                "resource": "*:*_invisibility_cooldown",
                "comparison": "==",
                "compare_to": 0
              }
            ]
          },
          "if_action": {
            "type": "origins:and",
            "actions": [
              {
                "type": "origins:apply_effect",
                "effect": {
                  "id": "minecraft:invisibility",
                  "show_particles": false,
                  "duration": -1
                }
              },
              {
                "type": "origins:execute_command",
                "command": "scale set pehkui:visibility 0.2 @s"
              },
              {
                "type": "origins:change_resource",
                "resource": "*:*_invisibility_active",
                "operation": "set",
                "change": 1
              },
              {
                "type": "origins:execute_command",
                "command": "execute store result score @s rend_starting_xp_levels run xp query @s levels"
              },
              {
                "type": "origins:execute_command",
                "command": "particle minecraft:white_smoke ~ ~ ~ .3 1 .3 0 20 normal"
              },
              {
                "type": "origins:play_sound",
                "sound": "minecraft:block.candle.extinguish",
                "pitch": 2,
                "category": "players"
              }
            ]
          },
          "else_action": {
            "type": "origins:and",
            "actions": [
              {
                "type": "origins:clear_effect",
                "effect": "minecraft:invisibility"
              },
              {
                "type": "origins:execute_command",
                "command": "scale set pehkui:visibility 1.5 @s"
              },
              {
                "type": "origins:trigger_cooldown",
                "power": "*:*_invisibility_cooldown"
              },
              {
                "type": "origins:change_resource",
                "resource": "*:*_invisibility_active",
                "operation": "set",
                "change": 0
              }
            ]
          }
        }
      ]
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:resource",
          "resource": "*:*_invisibility_cooldown",
          "comparison": "==",
          "compare_to": 0
        },
        {
          "type": "origins:xp_levels",
          "comparison": "<=",
          "compare_to": 20
        },
        {
          "type": "origins:xp_points",
          "comparison": ">",
          "compare_to": 0
        }
      ]
    },
    "key": "key.origins.primary_active"
  },
  "invisibility_active": {
    "type": "origins:resource",
    "min": 0,
    "max": 1,
    "min_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:clear_effect",
          "effect": "minecraft:invisibility"
        },
        {
          "type": "origins:execute_command",
          "command": "scale set pehkui:visibility 1.5 @s"
        },
        {
          "type": "origins:trigger_cooldown",
          "power": "*:*_invisibility_cooldown"
        },
        {
          "type": "origins:execute_command",
          "command": "function rend:faded_husk/xp_usage_advancement"
        },
        {
          "type": "origins:execute_command",
          "command": "particle minecraft:white_smoke ~ ~ ~ .3 1 .3 0 20 normal"
        },
        {
          "type": "origins:play_sound",
          "sound": "minecraft:block.candle.extinguish",
          "pitch": 2,
          "category": "players"
        }
      ]
    }
  },
  "invisibility_cooldown": {
    "type": "origins:cooldown",
    "cooldown": 400,
    "hud_render": {
      "should_render": true,
      "sprite_location": "*:textures/gui/community/leopardx/resource_bar_01.png",
      "bar_index": 1,
      "condition": {
        "type": "origins:xp_levels",
        "comparison": "<=",
        "compare_to": 20
      }
    }
  },
  "mitigate_callback_trigger": {
    "type": "origins:action_on_callback",
    "entity_action_gained": {
      "type": "origins:change_resource",
      "resource": "*:*_invisibility_cooldown",
      "change": 400,
      "operation": "set"
    }
  },
  "reset_cooldown_on_death": {
    "type": "origins:action_on_death",
    "bientity_action": {
      "type": "origins:target_action",
      "action": {
        "type": "origins:and",
        "actions": [
          {
            "type": "origins:clear_effect",
            "effect": "minecraft:invisibility"
          },
          {
            "type": "origins:execute_command",
            "command": "scale set pehkui:visibility 1.5 @s"
          },
          {
            "type": "origins:change_resource",
            "resource": "*:*_invisibility_active",
            "operation": "set",
            "change": 0
          },
          {
            "type": "origins:change_resource",
            "resource": "*:*_invisibility_cooldown",
            "operation": "set",
            "change": 500
          }
        ]
      }
    }
  },
  "drain_xp": {
    "type": "origins:action_over_time",
    "interval": 30,
    "condition": {
      "type": "origins:resource",
      "resource": "*:*_invisibility_active",
      "comparison": "==",
      "compare_to": 1
    },
    "entity_action": {
      "type": "origins:if_else",
      "condition": {
        "type": "origins:and",
        "conditions": [
          {
            "type": "origins:xp_points",
            "comparison": ">",
            "compare_to": 0
          },
          {
            "type": "origins:xp_levels",
            "comparison": "<=",
            "compare_to": 20
          }
        ]
      },
      "if_action": {
        "type": "origins:if_else_list",
        "actions": [
          {
            "action": {
              "type": "origins:add_xp",
              "points": -1
            },
            "condition": {
              "type": "origins:xp_levels",
              "comparison": "<",
              "compare_to": 10
            }
          },
          {
            "action": {
              "type": "origins:add_xp",
              "points": -2
            },
            "condition": {
              "type": "origins:xp_levels",
              "comparison": "<",
              "compare_to": 15
            }
          },
          {
            "action": {
              "type": "origins:add_xp",
              "points": -3
            },
            "condition": {
              "type": "origins:xp_levels",
              "comparison": "<=",
              "compare_to": 20
            }
          }
        ]
      },
      "else_action": {
        "type": "origins:change_resource",
        "resource": "*:*_invisibility_active",
        "operation": "set",
        "change": 0
      }
    }
  },
  "visible_when_hit": {
    "type": "origins:self_action_when_hit",
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_invisibility_active",
      "operation": "set",
      "change": 0
    },
    "condition": {
      "type": "origins:resource",
      "resource": "*:*_invisibility_active",
      "comparison": "==",
      "compare_to": 1
    }
  },
  "visible_on_hit": {
    "type": "origins:self_action_on_hit",
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_invisibility_active",
      "operation": "set",
      "change": 0
    },
    "condition": {
      "type": "origins:resource",
      "resource": "*:*_invisibility_active",
      "comparison": "==",
      "compare_to": 1
    }
  },
  "badges": [
    {
      "type": "origins:tooltip",
      "sprite": "*:textures/gui/community/leopardx/badge/xp_orb.png",
      "text": "Scales with XP levels. Regular strength at 30 levels."
    },
    {
      "type": "origins:tooltip",
      "sprite": "origins:textures/gui/badge/active.png",
      "text": [
        "At or below 20 levels, use [",
        { "keybind": "key.origins.primary_active" },
        "] to toggle invisibility. Drains XP."
      ]
    },
    {
      "type": "origins:tooltip",
      "sprite": "*:textures/gui/community/leopardx/badge/cursed_prison.png",
      "text": "Always slightly weakened in the Nether."
    }
  ]
}
