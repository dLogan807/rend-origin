{
  "type": "origins:multiple",
  "name": "Faded Husk",
  "description": "Your withered soul blatantly displays your lack of strength and affects your health and attack damage. Use this to your advantage to become wholly invisible.",
  "xp_available": {
    "type": "origins:resource",
    "min": 0,
    "max": 1,
    "hud_render": {
      "should_render": false
    }
  },
  "xp_checker": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:execute_command",
          "command": "execute store result score @s rend_xp_points run xp query @s points"
        },
        {
          "type": "origins:if_else",
          "condition": {
            "type": "origins:any_of",
            "conditions": [
              {
                "type": "origins:xp_levels",
                "comparison": "!=",
                "compare_to": 0
              },
              {
                "type": "origins:command",
                "command": "execute if entity @s[scores={rend_xp_points=0}]",
                "comparison": "!=",
                "compare_to": 1
              }
            ]
          },
          "if_action": {
            "type": "origins:change_resource",
            "resource": "*:*_xp_available",
            "operation": "set",
            "change": 1
          },
          "else_action": {
            "type": "origins:change_resource",
            "resource": "*:*_xp_available",
            "operation": "set",
            "change": 0
          }
        }
      ]
    },
    "interval": 30
  },
  "toggle_invisibility": {
    "type": "origins:active_self",
    "entity_action": {
      "type": "origins:if_else",
      "condition": {
        "type": "origins:all_of",
        "conditions": [
          {
            "type": "origins:resource",
            "resource": "*:*_invisibility_active",
            "comparison": "==",
            "compare_to": 0
          },
          {
            "type": "origins:resource",
            "resource": "*:*_invisibility_cooldown",
            "comparison": "==",
            "compare_to": 0
          }
        ]
      },
      "if_action": {
        "type": "origins:and",
        "actions": [
          {
            "type": "origins:apply_effect",
            "effect": {
              "id": "minecraft:invisibility",
              "show_particles": false,
              "duration": -1
            }
          },
          {
            "type": "origins:execute_command",
            "command": "scale set pehkui:visibility 0.2 @s"
          },
          {
            "type": "origins:change_resource",
            "resource": "*:*_invisibility_active",
            "operation": "set",
            "change": 1
          },
          {
            "type": "origins:execute_command",
            "command": "execute store result score @s rend_starting_xp_levels run xp query @s levels"
          }
        ]
      },
      "else_action": {
        "type": "origins:and",
        "actions": [
          {
            "type": "origins:clear_effect",
            "effect": "minecraft:invisibility"
          },
          {
            "type": "origins:execute_command",
            "command": "scale set pehkui:visibility 1.5 @s"
          },
          {
            "type": "origins:trigger_cooldown",
            "power": "*:*_invisibility_cooldown"
          },
          {
            "type": "origins:change_resource",
            "resource": "*:*_invisibility_active",
            "operation": "set",
            "change": 0
          }
        ]
      }
    },
    "condition": {
      "type": "origins:all_of",
      "conditions": [
        {
          "type": "origins:resource",
          "resource": "*:*_invisibility_cooldown",
          "comparison": "==",
          "compare_to": 0
        },
        {
          "type": "origins:xp_levels",
          "comparison": "<=",
          "compare_to": 15
        },
        {
          "type": "origins:resource",
          "resource": "*:*_xp_available",
          "comparison": "==",
          "compare_to": 1
        }
      ]
    },
    "key": "key.origins.primary_active"
  },
  "invisibility_active": {
    "type": "origins:resource",
    "min": 0,
    "max": 1,
    "min_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:clear_effect",
          "effect": "minecraft:invisibility"
        },
        {
          "type": "origins:execute_command",
          "command": "scale set pehkui:visibility 1.5 @s"
        },
        {
          "type": "origins:trigger_cooldown",
          "power": "*:*_invisibility_cooldown"
        },
        {
          "type": "origins:execute_command",
          "command": "function rend:faded_husk/xp_usage_advancement"
        }
      ]
    }
  },
  "invisibility_cooldown": {
    "type": "origins:cooldown",
    "cooldown": 500,
    "hud_render": {
      "should_render": true,
      "sprite_location": "*:textures/gui/community/leopardx/resource_bar_01.png",
      "bar_index": 1
    }
  },
  "reset_cooldown_on_death": {
    "type": "origins:action_on_death",
    "bientity_action": {
      "type": "origins:target_action",
      "action": {
        "type": "origins:and",
        "actions": [
          {
            "type": "origins:clear_effect",
            "effect": "minecraft:invisibility"
          },
          {
            "type": "origins:execute_command",
            "command": "scale set pehkui:visibility 1.5 @s"
          },
          {
            "type": "origins:change_resource",
            "resource": "*:*_invisibility_active",
            "operation": "set",
            "change": 0
          },
          {
            "type": "origins:change_resource",
            "resource": "*:*_invisibility_cooldown",
            "operation": "set",
            "change": 500
          }
        ]
      }
    }
  },
  "drain_xp": {
    "type": "origins:action_over_time",
    "interval": 30,
    "condition": {
      "type": "origins:resource",
      "resource": "*:*_invisibility_active",
      "comparison": "==",
      "compare_to": 1
    },
    "entity_action": {
      "type": "origins:if_else",
      "condition": {
        "type": "origins:all_of",
        "conditions": [
          {
            "type": "origins:resource",
            "resource": "*:*_xp_available",
            "comparison": "==",
            "compare_to": 1
          },
          {
            "type": "origins:xp_levels",
            "comparison": "<=",
            "compare_to": 15
          }
        ]
      },
      "if_action": {
        "type": "origins:if_else",
        "condition": {
          "type": "origins:xp_levels",
          "comparison": ">",
          "compare_to": 10
        },
        "if_action": { "type": "origins:add_xp", "points": -2 },
        "else_action": { "type": "origins:add_xp", "points": -1 }
      },
      "else_action": {
        "type": "origins:change_resource",
        "resource": "*:*_invisibility_active",
        "operation": "set",
        "change": 0
      }
    }
  },
  "visible_when_hit": {
    "type": "origins:self_action_when_hit",
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_invisibility_active",
      "operation": "set",
      "change": 0
    },
    "condition": {
      "type": "origins:resource",
      "resource": "*:*_invisibility_active",
      "comparison": "==",
      "compare_to": 1
    }
  },
  "badges": [
    {
      "type": "origins:tooltip",
      "sprite": "rend:textures/gui/badge/xp_orb.png",
      "text": "Scales with XP levels."
    },
    {
      "type": "origins:tooltip",
      "sprite": "origins:textures/gui/badge/active.png",
      "text": [
        "Drains XP. At or below 15 levels, use [",
        { "keybind": "key.origins.primary_active" },
        "] to toggle invisibility."
      ]
    },
    {
      "type": "origins:tooltip",
      "sprite": "rend:textures/gui/badge/cursed_prison.png",
      "text": "Always slightly weakened in the Nether."
    }
  ]
}
