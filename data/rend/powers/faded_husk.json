{
  "type": "origins:multiple",
  "name": "Faded Husk",
  "description": "Your withered soul blatantly displays your lack of strength and affects your health and attack damage. Use this to your advantage to become invisible.",
  "toggle_invisibility": {
    "type": "origins:active_self",
    "entity_action": {
      "type": "origins:if_else",
      "condition": {
        "type": "origins:and",
        "conditions": [
          {
            "type": "origins:resource",
            "resource": "*:*_invisibility_active",
            "comparison": "==",
            "compare_to": 0
          },
          {
            "type": "origins:resource",
            "resource": "*:*_invisibility_cooldown",
            "comparison": "==",
            "compare_to": 0
          }
        ]
      },
      "if_action": {
        "type": "origins:and",
        "actions": [
          {
            "type": "origins:apply_effect",
            "effect": {
              "id": "minecraft:invisibility",
              "show_particles": false,
              "duration": -1
            }
          },
          {
            "type": "origins:change_resource",
            "resource": "*:*_invisibility_active",
            "operation": "set",
            "change": 1
          }
        ]
      },
      "else_action": {
        "type": "origins:and",
        "actions": [
          {
            "type": "origins:clear_effect",
            "effect": "minecraft:invisibility"
          },
          {
            "type": "origins:trigger_cooldown",
            "power": "*:*_invisibility_cooldown"
          },
          {
            "type": "origins:change_resource",
            "resource": "*:*_invisibility_active",
            "operation": "set",
            "change": 0
          }
        ]
      }
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:xp_levels",
          "comparison": "<=",
          "compare_to": 10
        },
        {
          "type": "origins:or",
          "conditions": [
            {
              "type": "origins:xp_points",
              "comparison": ">",
              "compare_to": 0
            },
            {
              "type": "origins:xp_levels",
              "comparison": ">",
              "compare_to": 0
            }
          ]
        },
        {
          "type": "origins:resource",
          "resource": "*:*_invisibility_cooldown",
          "comparison": "==",
          "compare_to": 0
        }
      ]
    },
    "key": "key.origins.primary_active"
  },
  "invisibility_active": {
    "type": "origins:resource",
    "min": 0,
    "max": 1
  },
  "invisibility_cooldown": {
    "type": "origins:cooldown",
    "cooldown": 500,
    "hud_render": {
      "should_render": true,
      "sprite_location": "*:textures/gui/community/leopardx/resource_bar_01.png",
      "bar_index": 1
    }
  },
  "reset_cooldown_on_death": {
    "type": "origins:action_on_death",
    "bientity_action": {
      "type": "origins:target_action",
      "action": {
        "type": "origins:and",
        "actions": [
          {
            "type": "origins:clear_effect",
            "effect": "minecraft:invisibility"
          },
          {
            "type": "origins:change_resource",
            "resource": "*:*_invisibility_active",
            "operation": "set",
            "change": 0
          },
          {
            "type": "origins:change_resource",
            "resource": "*:*_invisibility_cooldown",
            "operation": "set",
            "change": 500
          }
        ]
      }
    }
  },
  "drain_xp": {
    "type": "origins:action_over_time",
    "condition": {
      "type": "origins:resource",
      "resource": "*:*_invisibility_active",
      "comparison": "==",
      "compare_to": 1
    },
    "entity_action": {
      "type": "origins:if_else",
      "condition": {
        "type": "origins:or",
        "conditions": [
          {
            "type": "origins:xp_points",
            "comparison": ">",
            "compare_to": 0
          },
          {
            "type": "origins:xp_levels",
            "comparison": ">",
            "compare_to": 0
          }
        ]
      },
      "if_action": {
        "type": "origins:add_xp",
        "points": -1
      },
      "else_action": {
        "type": "origins:and",
        "actions": [
          {
            "type": "origins:clear_effect",
            "effect": "minecraft:invisibility"
          },
          {
            "type": "origins:trigger_cooldown",
            "power": "*:*_invisibility_cooldown"
          },
          {
            "type": "origins:change_resource",
            "resource": "*:*_invisibility_active",
            "operation": "set",
            "change": 0
          }
        ]
      }
    }
  },
  "visible_when_hit": {
    "type": "origins:self_action_when_hit",
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:clear_effect",
          "effect": "minecraft:invisibility"
        },
        {
          "type": "origins:trigger_cooldown",
          "power": "*:*_invisibility_cooldown"
        },
        {
          "type": "origins:change_resource",
          "resource": "*:*_invisibility_active",
          "operation": "set",
          "change": 0
        }
      ]
    },
    "condition": {
      "type": "origins:resource",
      "resource": "*:*_invisibility_active",
      "comparison": "==",
      "compare_to": 1
    }
  },
  "badges": [
    {
      "type": "origins:tooltip",
      "sprite": "rend:textures/gui/badge/xp_orb.png",
      "text": "Scales with XP levels."
    },

    {
      "type": "origins:tooltip",
      "sprite": "origins:textures/gui/badge/active.png",
      "text": [
        "Drains XP. Below 10 levels, use [",
        { "keybind": "key.origins.primary_active" },
        "] to toggle invisibility."
      ]
    },
    {
      "type": "origins:tooltip",
      "sprite": "rend:textures/gui/badge/cursed_prison.png",
      "text": "Always slightly weakened in The Nether."
    }
  ]
}
